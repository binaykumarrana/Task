<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/button_corner"
    android:padding="@dimen/button_corner"
    android:background="@android:color/white"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvName"
            fontPath="fonts/raleway_semi_bold.ttf"
            android:background="@android:color/holo_red_dark"
            android:padding="@dimen/default_mini_padding"
            android:text="@string/offer"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_17"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProduct"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_mini_padding"
            fontPath="fonts/raleway_semi_bold.ttf"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_mini_padding"
            android:layout_marginTop="@dimen/default_mini_padding"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_17"
            tools:text="Follow the steps in the Build section to set up the project and then:"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_mini_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_mini_padding"
            android:layout_marginTop="@dimen/button_corner"
            fontPath="fonts/raleway_semi_bold.ttf"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_17"
            android:paddingBottom="@dimen/default_mini_padding"
            tools:text="23.4"
            tools:ignore="MissingPrefix"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>